<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
      background-color: #f7f7f7;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .button-group {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 40px;
    }

    .admin-btn {
      padding: 12px 24px;
      font-size: 16px;
      background-color: plum;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    .admin-btn:hover {
      background-color: rgb(103, 20, 103);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: white;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: left;
    }

    th {
      background-color: #eee;
    }

    .top-bar {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
    }

    .logout-container {
      display: flex;
      justify-content: center;
      margin: 30px 0;
    }

    .logout-btn {
      background-color: plum;
      color: white;
      border: none;
      padding: 12px 30px;
      font-size: 16px;
      font-weight: bold;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    .logout-btn:hover {
      background-color: rgb(178, 40, 180);
    }
  </style>
</head>
<body>

  <h1>Admin Dashboard</h1>

  <div class="button-group">
    <button class="admin-btn" onclick="loadData('useraccounts')">UserAccounts</button>
    <button class="admin-btn" onclick="loadData('contacts')">Contacts</button>
    <button class="admin-btn" onclick="loadData('customers')">Customers</button>
    <button class="admin-btn" onclick="loadData('products')">Products</button>
  </div>

  <div id="dataContainer"></div>

  <script>
  function loadData(type) {
    fetch(`/admin/data/${type}`)
      .then(res => res.json())
      .then(data => {
        const container = document.getElementById('dataContainer');
        if (!data.length) {
          container.innerHTML = `
            <p style="text-align: center; color: #888; font-size: 18px; margin-top: 30px;">
              No data found for ${type}.
            </p>`;
          return;
        }

        let table = '<table><tr>';
        Object.keys(data[0]).forEach(key => {
          table += `<th>${key}</th>`;
        });
        table += '</tr>';

        data.forEach(row => {
          table += '<tr>';
          Object.entries(row).forEach(([key, value]) => {
            if (key === 'price') {
              value = `â‚¹${Number(value).toLocaleString()}`;
            }
            table += `<td>${value}</td>`;
          });

          table += '</tr>';
        });

        table += '</table>';
        container.innerHTML = table;
      })
      .catch(err => {
        console.error('Error loading data:', err);
      });
  }

  function logout() {
    window.location.href = '/';
  }
  </script>

  <div class="logout-container">
    <button class="logout-btn" onclick="logout()">Logout</button>
  </div>

</body>
</html>
